@model test.ViewModel.BasicData.HospitalVMs.HospitalVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
    <wt:row items-per-row="ItemsPerRowEnum.Two">
        <wt:textbox field="Entity.Name" />
        <wt:combobox field="Entity.Level" />
        <wt:selector list-vm="Cities" field="Entity.LocationId" text-bind="Cities.EntityList[0].CityName">
            <wt:searchpanel vm="Cities">
                <wt:row items-per-row="ItemsPerRowEnum.Two">
                    <wt:textbox field="Cities.Searcher.CityName" />
                </wt:row>
            </wt:searchpanel>
        </wt:selector>
    </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
