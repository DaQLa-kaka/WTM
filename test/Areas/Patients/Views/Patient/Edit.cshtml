@model test.ViewModel.Patients.PatientVMs.PatientVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:textbox field="Entity.PatientName" />
<wt:textbox field="Entity.IdNumber" />
<wt:combobox field="Entity.Gender" />
<wt:combobox field="Entity.Status" />
<wt:datetime field="Entity.Birthday" />
<wt:combobox field="ShengId" items="AllSheng" label-text="籍贯（省）" trigger-url="/BasicData/City/GetChildrenCity" link-field="ShiId" required="true" />
<wt:combobox field="ShiId" items="AllShi" label-text="籍贯（市）" trigger-url="/BasicData/City/GetChildrenCity" link-field="Entity.LocationId" required="true" />
<wt:combobox field="Entity.LocationId" items="AllQu" label-text="籍贯（区）" required="true" />
<wt:combobox field="Entity.HospitalID" items="AllHospitals"/>
<wt:upload field="Entity.PhotoId" />
<wt:checkbox field="SelectedVirusesIDs" items="AllVirusess"/>
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
